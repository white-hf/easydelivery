<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="textStart">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/orderDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:gravity="clip_horizontal|clip_vertical|start|fill|top|left"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textDirection="ltr"
        android:textSize="16sp"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar" />

    <RadioGroup
        android:id="@+id/operation_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:checkedButton="@id/radioButtonSelfPick"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonSelfPick"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="自取" />

        <RadioButton
            android:id="@+id/radioButtonPutinStorage"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="返仓" />

        <RadioButton
            android:id="@+id/radioButtonScan"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="扫件" />

        <RadioButton
            android:id="@+id/radioBtnReset"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重置" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关闭" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="操作" />
    </LinearLayout>

</LinearLayout>